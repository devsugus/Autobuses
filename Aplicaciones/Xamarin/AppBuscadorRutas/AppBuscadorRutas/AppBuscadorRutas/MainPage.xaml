<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppBuscadorRutas"
             x:Class="AppBuscadorRutas.MainPage">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Image Source="logo.png" 
                   Aspect="AspectFill"
                   VerticalOptions="Start" 
                   HorizontalOptions="Start"/>
            <Label
                Text="Buscador de rutas"
                FontSize="Large"
                TextColor="Black"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Bienvenido al Buscador de rutas de Grupo Sesé" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
            <Label Text="Ciudad de origen"
           HorizontalOptions="CenterAndExpand"/>
            <Picker
               HorizontalOptions="CenterAndExpand"
           />
            <Label Text="Ciudad de destino" 
           HorizontalOptions="CenterAndExpand"/>
            <Picker
               HorizontalOptions="CenterAndExpand" 
           />
            <Button Text="Buscar rutas" 
                HorizontalOptions="CenterAndExpand" 
                VerticalOptions="CenterAndExpand"
                Clicked="Button_Clicked"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>
