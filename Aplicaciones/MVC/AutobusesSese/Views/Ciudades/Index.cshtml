@model IEnumerable<AutobusesSese.Models.Ciudades>

@{
    ViewBag.Title = "Ciudades";
}
<style>
    th {
        background-color: #2c5aa0;
        font-size: 1.2em;
        color: white;
        text-shadow: black 1px 1px 1px;
    }
</style>
<h2 id="TituloCiudades">Ciudades</h2>

<p>
    @Html.ActionLink("Nueva Ciudad", "Create")
</p>
<table class="table table-striped table-bordered" id="example">
   <thead>
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.NombreCiudad)*@
            <label>Nombre Ciudad</label>
        </th>
        <th></th>
    </tr>
       </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCiudad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>