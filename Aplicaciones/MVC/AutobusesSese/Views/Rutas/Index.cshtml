@model IEnumerable<AutobusesSese.Models.Rutas>

@{
    ViewBag.Title = "Rutas";
}
<style>
    th {
        background-color: #2c5aa0;
        font-size: 1.2em;
        color: white;
        text-shadow: black 1px 1px 1px;
    }
</style>

<h2 id="TituloRutas">Rutas</h2>

<p>
    @Html.ActionLink("Nueva Ruta", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Km)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tiempo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Ciudades.NombreCiudad)*@
            <label>Ciudad de Origen</label>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Ciudades1.NombreCiudad)*@
            <label>Ciudad de Destino</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Km)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tiempo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ciudades.NombreCiudad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ciudades1.NombreCiudad)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
